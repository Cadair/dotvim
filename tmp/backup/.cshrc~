# File: .cshrc
#
# This file is run whenever a new C-shell starts

# --- Aliases for interactive shells

if ( $?prompt ) then

	# --- Safety checks 
	alias rm 'rm -i'
	alias mv 'mv -i'
	alias cp 'cp -i'

	# --- CD should echo PWD
	alias cd 'cd \!*; echo $cwd'

	# --- Set the prompt to a nice informative version
	set prompt="{`uname -n`:${USER}:!}% "
endif

# --- Shell tweaking

set noclobber			# Do not overwrite existing files
set ignoreeof			# Stray ^D should not exit from shell
set filec			# Filename completion
umask 022			# Allow others to read and run
set autolist
setenv http_proxy http://www-cache.leeds.ac.uk:3128/
setenv GS_DEVICE x11

# --- Package management... (duplicated in csh.login for safety)

if ( -e /apps/.setup/csh ) source /apps/.setup/csh

## AOL

app setup enthought
# app setup ifc
# app setup netcdf-4.1-ifc-64
app setup gimp
app setup jabref

# ## --- env for LEM dir LEM_v2.4
        setenv LEM_v24 /nfs/see-fs-02_users/eeaol/LEM_v2.4/LEM
#
#        ## --- env for LEMSUB 2.4 
               setenv LEM $LEM_v24
                      set path = ($LEM/LEMSUB/bin $path)

set path = (~/bin $path)
set path = (~/.local $path)

## alias
source ~/.csh_aliases

## stuff for dg2nc
if ( $?LD_LIBRARY_PATH ) then
    setenv LD_LIBRARY_PATH /apps/ifc-7.0/compiler70/ia32/lib/:${LD_LIBRARY_PATH}
else
    setenv LD_LIBRARY_PATH /apps/ifc-7.0/compiler70/ia32/lib/
endif
