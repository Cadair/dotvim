#!/bin/bash
app setup gifmerge
# conversion to gif
for i in `ls presentation`
do 
    # hi-quality
    convert -verbose presentation/$i -resize 2000x gif_hi/${i%.*}.gif
    # low-quality
    convert -verbose presentation/$i -resize 1000x gif_low/${i%.*}.gif
done

for i in `ls cam1`
do 
    # cam1
    convert -verbose cam1/$i -resize 2000x gif_cam1/${i%.*}.gif
    # cam2
    convert -verbose cam2/$i -resize 2000x gif_cam2/${i%.*}.gif
done


# gifmerge (looping forever, 500ms frame delay)
# hi-quality
gifmerge -50 -l0 gif_hi/*.gif > anim_11_7_06c_hi.gif 
# low-quality
gifmerge -50 -l0 gif_low/*.gif > anim_11_7_06c_low.gif 

# cameras
gifmerge -50 -l0 gif_cam1/*.gif > anim_11_7_06c_cam1.gif 
gifmerge -50 -l0 gif_cam2/*.gif > anim_11_7_06c_cam2.gif 
